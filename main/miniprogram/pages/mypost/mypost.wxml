<view class="num" wx:if="{{flag==1}}" >共找到{{mypost.length}}个帖子</view>
<view wx:for="{{mypost}}" class="bigbox">
  <view bindtap="gotoPost" id="{{item.id}}" class="">
    <view wx:if="{{item.type}}">
      <view class="divline"></view>
      <view class="top">
        <image src="/img/discuss!.png" class="tag2"></image>
        <view class="title">{{item.title}}</view>
        <view class="type">{{types[item.type]}}</view>
      </view>


      <view class="down">
        <view class="tag">{{item.tag}}</view>
        <view class="time">{{item.activeTime}}</view>
      </view>
    </view>

    <view wx:else>
      <view class="divline"></view>
      <view class="top">
        <image src="/img/dicuss.png" class="tag2"></image>
        <view class="title">{{item.title}}
          <view class="time2">{{item.activeTime}}</view>
        </view>
      </view>
        
    </view>
    
  </view>
  <text decode="true">&ensp;</text>
  
</view>
