<view class="num" wx:if="{{flag==1}}" >共找到{{mypost.length}}个帖子</view>
<view wx:for="{{datacollect}}">
  <view bindtap="gotoPost" id="{{item.id}}" class="box">
    
    <view class="top">
       <view class="title">{{item.title}}</view>
       <view class="type">{{item.type}}</view>
    </view>
    
    <view class="nickName">{{item.postowner}}</view>
    <view class="divline"></view>
    <view class="down">
      <view class="tag">{{item.tag}}</view>
       <view class="time">{{item.activeTime}}</view>
    </view>

    <!--调试用，请忽略{{item.id}}-->
    <text decode="true">&ensp;</text>
  </view>
</view>
